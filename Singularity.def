

Bootstrap: docker
From: ubuntu:22.04

%post
    # Basic setup
    export DEBIAN_FRONTEND=noninteractive
    apt-get update && apt-get install -y \
        build-essential \
        wget \
        python3-pip \
        python3-venv \
        curl

    # Install BLAST+
    cd /opt
    wget https://ftp.ncbi.nlm.nih.gov/blast/executables/blast+/LATEST/ncbi-blast-2.17.0+-x64-linux.tar.gz
    tar -zxf ncbi-blast-2.17.0+-x64-linux.tar.gz
    rm ncbi-blast-2.17.0+-x64-linux.tar.gz
    export PATH="/opt/ncbi-blast-2.17.0+/bin:$PATH"]

    curl -LsSf https://astral.sh/uv/install.sh | sh

    uv pip install --system \
        black \
        polars \
        pyarrow \
        pyfastx \
        ruff

%environment
    export PATH="/opt/ncbi-blast-2.17.0+/bin:$PATH"


